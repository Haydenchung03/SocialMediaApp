html 
    head 
        title User Rating 
    body 
        include ../partials/headers.pug
        link(rel = "stylesheet" href = "https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        h1 User Ratings 
        br
        each i, index in userRatingReview
            form(action = "/userRating/" + session.userid + "/" + userRatingReview[index]._id method = "post")
                p Name of artist: #{userRatingReview[index].artist}
                p Name of artwork: #{userRatingReview[index].name}
                p Review: #{userRatingReview[index].review}
                p Rating: #{userRatingReview[index].rating}
                p(id = index) 
                input(type = "submit" value = "Delete Review")
            
        
